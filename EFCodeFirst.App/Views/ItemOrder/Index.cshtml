@model List<ItemOrder>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    Back to Home Page
</a>
<a asp-controller="ItemOrder" asp-action="Add" class="btn btn-success">
    Add New ItemOrder
</a>
<br />
<br />

@if (Model.Count() < 1)
{
    <div class="alert alert-info">
        No ItemOrder Records Found.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Item</th>
                <th>Supplier</th>
                <th>Quantity</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ItemOrder in Model)
            {
                <tr>
                    <td>@ItemOrder.ItemId</td>
                    <td>@ItemOrder.SupplierId</td>
                    <td>@ItemOrder.Quantity</td>
                    <td>@ItemOrder.OrderDate</td>
                    <td>
                        <a asp-controller="ItemOrder" asp-action="Edit" asp-route-id="@ItemOrder.ItemOrderId" class="btn btn-info btn-sm">
                            Edit
                        </a>
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm deleteBtn">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $('.deleteBtn').click(function (e) {
            swal({
                title: "Are you sure?",
                text: "Are you sure you want to delete this record?",
                icon: "warning",
                buttons: true,
                dangerMode: true
            })
        });
    </script>
}
