@model Supplier

<h3>Edit Supplier</h3>

<form asp-controller="Supplier" asp-action="Edit" method="post">
    <input type="hidden" asp-for="SupplierId" />

    <label asp-for="SupplierName"></label>
    <input type="text" asp-for="SupplierName" class="form-control" />
    <br />
    <label asp-for="ContactNum">Contact Number</label>
    <input type="number" asp-for="ContactNum" class="form-control" />
    <br />
    <label asp-for="Email"></label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />

    <a asp-controller="Supplier" asp-action="Index" class="btn btn-primary">
        Back
    </a>
    <input type="submit" class="btn btn-success" value="Save Changes" />
</form>
