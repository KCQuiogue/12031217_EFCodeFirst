@model Supplier

<h3>Add New Supplier</h3>

<form asp-controller="Supplier" aso-action="Add" method="post">
    <label asp-for="SupplierName"></label>
    <input type="text" asp-for="SupplierName" class="form-control" />
    <br />
    <label asp-for="ContactNum"></label>
    <input type="number" asp-for="ContactNum" class="form-control" />
    <br />
    <label asp-for="Email"></label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />

    <a asp-controller="Supplier" asp-action="Index" class="btn btn-primary">
        Back
    </a>
    <input type="submit" value="Add Supplier" class="btn btn-success" />
</form>
