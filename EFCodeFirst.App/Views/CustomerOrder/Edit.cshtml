@model CustomerOrder

<h3>Edit Customer Order</h3>

<form asp-controller="CustomerOrder" asp-action="Edit" method="post">
    <label asp-for="CustomerId">Customer</label>
    <input type="number" asp-for="CustomerId" class="form-control" />
    <br />
    <label asp-for="ItemId"></label>
    <input type="number" asp-for="ItemId" class="form-control" />
    <br />
    <label asp-for="Quantity"></label>
    <input type="number" asp-for="Quantity" class="form-control" />
    <br />
    <label asp-for="OrderDate"></label>
    <input type="datetime" asp-for="OrderDate" class="form-control" />
    <br />

    <a asp-controller="CustomerOrder" asp-action="Index" class="btn btn-primary">
        Back
    </a>
    <input type="submit" class="btn btn-success" value="Save Changes" />
</form>
