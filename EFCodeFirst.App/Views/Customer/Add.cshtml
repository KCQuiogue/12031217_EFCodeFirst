@model Customer

<h3>Add New Customer</h3>

<form asp-controller="Customer" aso-action="Add" method="post">
    <label asp-for="Lastname"></label>
    <input type="text" asp-for="Lastname" class="form-control" />
    <br />
    <label asp-for="Firstname"></label>
    <input type="text" asp-for="Firstname" class="form-control" />
    <br />
    <label asp-for="ContactNum">Contact Number</label>
    <input type="number" asp-for="ContactNum" class="form-control" />
    <br />
    <label asp-for="Email"></label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />

    <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">
        Back
    </a>
    <input type="submit" value="Add Customer" class="btn btn-success" />
</form>
